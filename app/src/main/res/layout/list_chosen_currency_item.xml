<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card"
    android:backgroundTint="@color/gainsboro"
    app:cardCornerRadius="@dimen/radius_card_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNameRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/ada"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/size_name_currency"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textViewExchangeRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/_89p"
            android:textColor="@color/gray"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/size_item_currency_rate_item_linear"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:src="@drawable/ic_delete_forever_24"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>